/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader {
    width: 100%;
    padding: 0 10rpx;
    height: auto;
    font-size: 14px;
    flex-direction: column;
    align-items: flex-start;
    box-sizing: border-box;
}
.uploader-radio{
    padding: 12rpx 0;
}
.uploader-block{
    text-align: center;
    width: 100%;
    border: 1px rgba(0, 0, 0, 0.1) solid;
}
.uploader-text {
  width: 100%;
  line-height: 52px;
  font-size: 100rpx;
  color: #007aff;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}
.uploader-foot{
    width: 100%;
    display: flex;
    padding: 10rpx 0;
}
.uploader-foot-btn{
    font-size: 14px;
}
.uploader-btn-sure{
    background-color: #007aff;
    color: #ffffff;
}