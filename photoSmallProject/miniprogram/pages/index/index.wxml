<!--index.wxml-->
<view class="container">

    <!-- 用户 openid -->
    <view class="userinfo">
        <button 
            open-type="getUserInfo" 
            bindgetuserinfo="onGetUserInfo"
            class="userinfo-avatar"
            style="background-image: url({{avatarUrl}})"
        ></button>
        <!-- 用户信息的展示 -->
        <view wx:if="{{!isUserInfo}}">
            <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
        </view>
        <block wx:else>
            <text>{{userInfo.nickName}}</text>
        </block>
    </view>
    <view class="uploader">
        <view class='uploader-radio'>
            <radio-group bindchange='radioChange'>
                <radio value='singe' checked>单张上传</radio>
                <radio value='more'>压缩上传</radio>
            </radio-group>
        </view>
        <view class='uploader-block'>
            <image
                class='uploader-image'
                wx:if="{{imgUrl}}"
                src='{{imgUrl}}'
            ></image>
            <text class='uploader-text' wx:else>+</text>
        </view>
        <view class='uploader-foot'>
            <button class='uploader-foot-btn uploader-btn-sure'>生成订单</button>
            <button class='uploader-foot-btn'>重新上传</button>
        </view>
    </view>
    <view style="text-align:center">{{title}}</view>
    <view>点击左上角返回回到之前页面</view>
    <view class="btn-area">
        <navigator
            class="nav-item"
            url="/pages/question/question"
            hover-class="navigator-hover"
        >
            跳转到新页面
        </navigator>
        <navigator
            url="../order/order?title=redirect"
            open-type="redirect"
            hover-class="other-navigator-hover"
        >
            在当前页打开
        </navigator>
        <navigator
            url="/pages/mycenter/mycenter"
            open-type="switchTab"
            hover-class="other-navigator-hover"
        >
            切换 Tab
        </navigator>
        <navigator
            target="miniProgram"
            open-type="navigate"
            app-id=""
            path=""
            extra-data=""
            version="release"
        >
            打开绑定的小程序
        </navigator>
    </view>
</view>
